    <link rel="stylesheet" href="/AdminUI/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

    <link href="~/adminui/plugins/sweetalert2/sweetalert2.css" rel="stylesheet" />

</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
